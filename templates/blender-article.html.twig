{#
/**
 * @file
 * Default theme implementation to print Articles.
 *
 * Available variables:
 *   - articles
 *
 *
 * @ingroup themeable
 */
#}

{% if articles %}
{% for a in articles %}
  <div class="article{% if not a.is_owner %} other{% endif %}" id="article-{{ a.id }}">
    <div class="article-icons">
      {% if a.is_owner %}
        <div class="tooltip">
          <i class="material-icons md-dark icon done-icon{% if not a.inbox %} archive{% endif %}" id="done-{{ a.id }}">done</i>
          <span class="tooltiptext" id="donetooltip-{{ a.id }}">{% if a.inbox %}Mark as done{% else %}Move to inbox{% endif %}</span>
        </div>
      {% else %}
        <i class="icon"></i>
      {% endif %}
      <div class="tooltip">
        <i class="material-icons md-dark icon bookmark-icon" id="bookmark-{{ a.id }}">bookmark_border</i>
        <span class="tooltiptext" id="bookmarktooltip-{{ a.id }}">Add bookmark</span>
      </div>
      <div class="tooltip">
        <i class="material-icons md-dark icon vote-icon" id="vote-{{ a.id }}">plus_one</i>
        <span class="tooltiptext" id="votetooltip-{{ a.id }}">Add vote</span>
      </div>
    </div>


    <div class="article-data">
      <span class="article-title">{{ a.title }}</span>
      <span class="article-metadata">{{ a.authors }}, <a href="http://dx.doi.org/{{ a.doi }}" target="_BLANK">{{ a.journal }} ({{ a.year }}){% if a.volume %}  <span class = "article-volume">{{ a.volume }}</span>{% endif %}{% if a.pages %}, {{ a.pages }}{% endif %}.</a>
      <br />
      Assigned to {{ a.owner }} on {{ a.date_added}}.</span>
    </div>

    <div class="article-actions">
      <i class="material-icons md-dark icon options-icon" id="options"-{{ a.id }}">menu</i>
    </div>
  </div>
{% endfor %}
{% endif %}
