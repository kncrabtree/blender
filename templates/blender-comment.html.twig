{#
/**
 * @file
 * Default theme implementation to print comments.
 *
 * Available variables:
 *   - comments
 *
 *
 * @ingroup themeable
 */
#}

{% if comments %}
{% for c in comments %}
  <div class="comment" id="comment-{{ c.id }}">
    <div class="comment-metadata">
      <span class="comment-author">{{ c.author }}</span>
      <span class="comment-timestamp">{{ c.timestamp }}</span>
      {% if c.edited %}
        <span class="comment-edit-timestamp">Last edited: {{ c.edited }}</span>
      {% endif %}
    </div>


    <div class="comment-body">
      {{ c.text }}
    </div>

    {% if c.is_author %}
      <div class="comment-actions">
        <span class="comment-edit-link" id="comment_edit-{{ c.id }}">Edit</span>
        <span class="comment-delete-link" id="comment_delete-{{ c.id }}">Delete</span>
      </div>
    {% endif %}

{% endfor %}
{% else %}
<div class="no-comments">No comments yet.</div>
{% endif %}
