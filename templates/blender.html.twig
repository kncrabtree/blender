{#
/**
 * @file
 * Default theme implementation to print Articles.
 *
 * Available variables:
 *   - articles
 *   - more
 *   - page
 *
 *
 * @ingroup themeable
 */
#}

<div class="blender-navigation">
  <a href="{{ url('blender.inbox') }}">
    <div class="blender-navigation-item{% if page is same as('inbox') %} selected{% endif %}">
      <i class="material-icons md-dark icon clickable inbox-nav-icon{% if page is same as('inbox') %} selected{% endif %}">markunread</i>
      <span class="blender-navigation-desc">Inbox</span>
    </div>
  </a>
  <a href="{{ url('blender.user-bookmarks') }}">
    <div class="blender-navigation-item{% if page is same as('bookmarks') %} selected{% endif %}">
      <i class="material-icons md-dark icon clickable bookmark-nav-icon{% if page is same as('bookmarks') %} selected{% endif %}">bookmark</i>
      <span class="blender-navigation-desc">My Bookmarks</span>
    </div>
  </a>
  <a href="{{ url('blender.user-votes') }}">
    <div class="blender-navigation-item{% if page is same as('user-votes') %} selected{% endif %}">
      <i class="material-icons md-dark icon clickable vote-nav-icon{% if page is same as('user-votes') %} selected{% endif %}">plus_one</i>
      <span class="blender-navigation-desc">My Votes</span>
    </div>
  </a>
    <a href="{{ url('blender.user-archive') }}">
    <div class="blender-navigation-item{% if page is same as('user-archive') %} selected{% endif %}">
      <i class="material-icons md-dark icon clickable archive-nav-icon{% if page is same as('user-archive') %} selected{% endif %}">done</i>
      <span class="blender-navigation-desc">My Articles</span>
    </div>
  </a>
</div>

{% if articles %}
  <div class="articles-table">
  {% include '@blender/blender-article.html.twig' %}
  {% if more %}
    <div id="articles-more">
      <i class="material-icons md-dark clickable md-48 icon">
      <div class="tooltip">
        file_download
        <span class="tooltiptext">Show more articles</span>
      </div>
      </i>
    </div>
  {% endif %}
  </div>
{% else %}
  <div class="no-articles">No articles to display.</div>
{% endif %}
